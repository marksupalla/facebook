extends ../shared/template
block content
  h2 Edit Profile
  .row
    .col-xs-6
      form(role='form', method='post', action='/profile')
        input(type='hidden', name='_method', value='put')
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', autofocus=true)
        .form-group
          label(for='photo') Phone
          input.form-control#phone(type='text', name='phone')
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='text', name='photo')
        .form-group
          label(for='photo') Tagline
          input.form-control#tagline(type='text', name='tagline')
        .form-group
          label(for='photo') FaceBook
          input.form-control#facebook(type='text', name='facebook')
        .form-group
          label(for='photo') Twitter
          input.form-control#twitter(type='text', name='twitter')
        button.btn.btn-primary(type='submit') Submit
    .col-xs-6

